<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus_pc.monitoringhafalanapp2.DetailParafActivity">

    <TextView
        android:id="@+id/tglParaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tanggal"
        android:layout_alignBottom="@+id/tanggal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Tanggal Paraf"
        android:textColor="@android:color/holo_purple"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/tanggal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/namaPemaraf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Nama Pemaraf"
        android:layout_alignBaseline="@+id/pemaraf"
        android:layout_alignBottom="@+id/pemaraf"
        android:layout_alignStart="@+id/tglParaf" />

    <EditText
        android:id="@+id/pemaraf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/tanggal"
        android:layout_alignStart="@+id/tanggal"/>

    <TextView
        android:id="@+id/catatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Catatan"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/pemaraf"
        android:layout_alignStart="@+id/namaPemaraf" />

    <EditText
        android:id="@+id/isiCatatan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/catatan"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/catatan" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Layak Hafal ?"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/isiCatatan"
        android:layout_alignStart="@+id/isiCatatan" />

    <Button
        android:id="@+id/simpan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:onClick="handleDetailParaf"
        android:text="Simpan" />


</RelativeLayout>
