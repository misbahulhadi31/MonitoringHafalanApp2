<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus_pc.monitoringhafalanapp2.UbahDataActivity">

    <TextView
        android:id="@+id/noView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/noInduk"
        android:layout_alignBottom="@+id/noInduk"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Nomor Induk"
        android:textColor="@android:color/holo_purple"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/noInduk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/namaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Nama Lengkap"
        android:layout_alignBaseline="@+id/namaSantri"
        android:layout_alignBottom="@+id/namaSantri"
        android:layout_alignStart="@+id/noView" />

    <EditText
        android:id="@+id/namaSantri"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/noInduk"
        android:layout_alignStart="@+id/noInduk" />

    <TextView
        android:id="@+id/kelasView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Kelas"
        android:layout_alignBaseline="@+id/kelas"
        android:layout_alignBottom="@+id/kelas"
        android:layout_alignStart="@+id/namaView" />

    <EditText
        android:id="@+id/kelas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/namaSantri"
        android:layout_alignStart="@+id/namaSantri" />

    <TextView
        android:id="@+id/kosulatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Konsulat"
        android:layout_alignBaseline="@+id/konsulat"
        android:layout_alignBottom="@+id/konsulat"
        android:layout_alignStart="@+id/kelasView" />

    <EditText
        android:id="@+id/konsulat"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/kelas"
        android:layout_alignStart="@+id/kelas" />

    <TextView
        android:id="@+id/waliView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Nama Wali (Ayah)"
        android:layout_alignBaseline="@+id/namaWali"
        android:layout_alignBottom="@+id/namaWali"
        android:layout_alignStart="@+id/kosulatView" />

    <EditText
        android:id="@+id/namaWali"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/konsulat"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/telpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/holo_purple"
        android:text="Nomor Telepon"
        android:layout_alignBottom="@+id/noTelp"
        android:layout_alignStart="@+id/waliView" />

    <EditText
        android:id="@+id/noTelp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/namaWali"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/simpan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp" />

</RelativeLayout>
