<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/listGambar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/notyet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/listParaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="Paraf"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_alignTop="@+id/listGambar"
        android:layout_toEndOf="@+id/listGambar" />

    <TextView
        android:id="@+id/listSurah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surah"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/listParaf"
        android:layout_alignStart="@+id/listParaf" />

</RelativeLayout>