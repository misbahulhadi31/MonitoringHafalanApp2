<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="00000"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/listGambar"
        android:layout_toEndOf="@+id/listGambar" />

    <TextView
        android:id="@+id/texttNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamba Allah"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textNomor"
        android:layout_alignStart="@+id/textNomor"
        android:layout_marginTop="10dp" />

</RelativeLayout>